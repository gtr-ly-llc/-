<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nt.mapper.AdminMapper">
    <select id="login" parameterType="String" resultType="int">
        select count(adminname) from t_admin where adminname=#{param1} and adminpwd=#{param2}
    </select>
    
    
    <!-- 公告管理 -->
    <select id="deleteNoticeSelect" resultType="Notice">
        select * from t_notice
    </select>
    <select id="selectANotice" resultType="Notice" parameterType="Int">
        select * from t_notice where noticeid= #{noticeid}
    </select>
    <delete id="deleteNotice" parameterType="Int">
        delect from t_notice where noticeid = #{noticeid}
    </delete>
    <insert id="addNotice" parameterType="Notice">
        insert into t_notice(noticeid,noticetitle,noticecontent,noticetime)
        values(null,#{noticetitle},#{noticecontent},now())
    </insert>




</mapper>